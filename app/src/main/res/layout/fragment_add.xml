<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="32sp"
        tools:context=".view.fragments.AddFragment">

        <Button
            android:id="@+id/selectDayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_rounded_corners"
            android:text="установить дату"
            app:backgroundTint="@color/blue_med" />

        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textTimeMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="8dp"
                android:text="время замера"
                android:textSize="24sp" />

            <ImageButton
                android:id="@+id/addOneMeasureBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/custom_rounded_corners_green"
                app:srcCompat="@drawable/ic_baseline_add_24" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
           android:layout_gravity="center_horizontal"
            android:id="@+id/recyclerMeasure"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center">>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:text="время приема лекарства"
            android:textSize="24sp" />
        <ImageButton
            android:id="@+id/addOneMedBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_rounded_corners_green"
            app:srcCompat="@drawable/ic_baseline_add_24" />
</LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMed"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:id="@+id/nameMedical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:text="название лекарства"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDoza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кол- во лекарства"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextMedicalDoze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="number" />

            <TextView
                android:id="@+id/textViewEntityDoza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="мкг" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFrequencyMedical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Частота приема"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editFrequencyMedical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="number" />

            <TextView
                android:id="@+id/drugPerDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="раз в день"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumberEntity"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="272dp" />

        </LinearLayout>

        <Button
            android:id="@+id/saveBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@drawable/custom_rounded_corners"
            android:text="Сохранить"
            app:backgroundTint="@color/blue_med" />


    </LinearLayout>
</ScrollView>