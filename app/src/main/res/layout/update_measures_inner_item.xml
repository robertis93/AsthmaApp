<?xml version="1.0" encoding="utf-8"?>
<!--XML implementation of Card Layout
    Keep the width of card layout to match parent-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <EditText
        android:id="@+id/hourText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 :"
        android:textSize="16sp"
       />

    <TextView
        android:id="@+id/pointDouble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" :"
        android:textSize="16sp"
       />


    <EditText
        android:id="@+id/minuteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="44"
        android:textSize="16sp"
       />


    <EditText
        android:id="@+id/measureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150"
        android:textSize="16sp"
        android:paddingStart="8dp"/>

    <TextView
        android:id="@+id/measuress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="л/мин"
        android:textSize="16sp"
        android:paddingStart="8dp"/>
        <ImageView
            android:id="@+id/image_delete_alarm"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/delete_24"
            />
    </LinearLayout>

</androidx.cardview.widget.CardView>