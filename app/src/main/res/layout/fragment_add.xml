<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.fragments.AddFragment">

        <Button
            android:id="@+id/selectDayBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/custom_rounded_corners"
            android:text="установить дату"
            app:backgroundTint="@color/blue_med" />

        <TextView
            android:id="@+id/textTimeMeasure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:text="время замера"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/firstTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:inputType="textPersonName"
                android:text="08:00"
                app:layout_constraintBottom_toTopOf="@+id/secondTime"
                app:layout_constraintEnd_toStartOf="@+id/firstMeasure"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/firstMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:focusableInTouchMode="true"
                android:inputType="numberSigned"
                app:layout_constraintBottom_toTopOf="@+id/secondMeasure"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/firstTime"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/text1ViewDoza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="мкг" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/secondTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:inputType="textPersonName"
                android:text="16:00"
                app:layout_constraintBottom_toTopOf="@+id/thirdTime"
                app:layout_constraintEnd_toStartOf="@+id/secondMeasure"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/firstTime" />

            <EditText
                android:id="@+id/secondMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:inputType="numberDecimal"
                app:layout_constraintBottom_toTopOf="@+id/thirdMeasure"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/secondTime"
                app:layout_constraintTop_toBottomOf="@+id/firstMeasure" />
            <TextView
                android:id="@+id/text2ViewDoza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="мкг" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/thirdTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:inputType="textPersonName"
                android:text="23:00"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/thirdMeasure"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/secondTime" />


            <EditText
                android:id="@+id/thirdMeasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="6"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/thirdTime"
                app:layout_constraintTop_toBottomOf="@+id/secondMeasure" />
            <TextView
                android:id="@+id/text3ViewDoza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="мкг" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:text="время приема лекарства"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/editTextMedicalInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="48dp"
            android:text="Название лекарства"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewDoza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Кол- во лекарства"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/editTextMedicalDose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="number" />

            <TextView
                android:id="@+id/textViewEntityDoza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="мкг" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textViewFrequencyMedical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Частота приема"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/editFrequencyMedical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:inputType="number" />

            <TextView
                android:id="@+id/drugPerDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="раз в день"
                app:layout_constraintTop_toBottomOf="@+id/editTextNumberEntity"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="272dp" />

        </LinearLayout>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            android:background="@drawable/custom_rounded_corners"
            android:text="Сохранить"
            app:backgroundTint="@color/blue_med" />
    </LinearLayout>
</ScrollView>