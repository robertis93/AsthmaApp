<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/helloFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="com.example.asthmaapp.view.fragments.MeasureListFragment"
        android:label="@string/diary"
        tools:layout="@layout/fragment_measure_list">
        <action
            android:id="@+id/action_listFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_listFragment_to_updateFragment"
            app:destination="@id/updateFragment" />
        <action
            android:id="@+id/action_listFragment_to_alarmFragment"
            app:destination="@id/alarmFragment" />
        <action
            android:id="@+id/action_listFragment_to_medicalFragment"
            app:destination="@id/medicalFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.asthmaapp.view.fragments.AddMeasuresFragment"
        android:label="fragment_add"
        tools:layout="@layout/fragment_add">
        <action
            android:id="@+id/action_addFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="dateTime"
            app:argType="string"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/updateFragment"
        android:name="com.example.asthmaapp.view.fragments.UpdateMeasureFragment"
        android:label="UpdateFragment">
        <action
            android:id="@+id/action_updateFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <argument
            android:name="currentItemDay"
            app:argType="com.example.asthmaapp.model.MedWithMeasuresAndMedicamentTime" />
    </fragment>
    <fragment
        android:id="@+id/alarmFragment"
        android:name="com.example.asthmaapp.view.fragments.AlarmFragment"
        android:label="@string/notif">
        <action
            android:id="@+id/action_alarmFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_alarmFragment_to_medicalFragment"
            app:destination="@id/medicalFragment" />
    </fragment>
    <fragment
        android:id="@+id/medicalFragment"
        android:name="com.example.asthmaapp.view.fragments.MedicalFragment"
        android:label="@string/medicament"
        tools:layout="@layout/medical_fragment">
        <action
            android:id="@+id/action_medicalFragment_to_listFragment"
            app:destination="@id/listFragment" />
        <action
            android:id="@+id/action_medicalFragment_to_alarmFragment"
            app:destination="@id/alarmFragment" />
    </fragment>
    <action
        android:id="@+id/goToAddFragmentAction"
        app:destination="@id/addFragment" />
    <fragment
        android:id="@+id/helloFragment"
        android:name="com.example.asthmaapp.view.fragments.HelloFragment"
        android:label="HelloFragment">
        <action
            android:id="@+id/action_helloFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@id/helloFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_helloFragment_to_viewPagerFragment"
            app:destination="@id/viewPagerFragment"
            app:popUpTo="@id/helloFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/viewPagerFragment"
        android:name="com.example.asthmaapp.view.fragments.onboarding.OnBoardingFragment"
        android:label="fragment_view_pager"
        tools:layout="@layout/fragment_view_pager">
        <action
            android:id="@+id/action_viewPagerFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@id/viewPagerFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_viewPagerFragment_to_medicalFragment"
            app:destination="@id/medicalFragment" />
    </fragment>
    <activity
        android:id="@+id/alarmActivityTest"
        android:name="com.example.asthmaapp.view.activities.AlarmMeasureNotificationActivity"
        android:label="AlarmActivityTest">
        <argument
            android:name="dateTime"
            app:argType="string"
            app:nullable="true" />
    </activity>
    <activity
        android:id="@+id/splashActivity"
        android:name="com.example.asthmaapp.view.activities.SplashActivity"
        android:label="activity_splash"
        tools:layout="@layout/activity_splash" />
</navigation>