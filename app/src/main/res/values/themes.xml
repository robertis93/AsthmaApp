<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AsthmaApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_med</item>
        <item name="colorPrimaryVariant">#2196F3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_med</item>
        <item name="colorSecondaryVariant">@color/blue_med</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/gilroy_medium</item>

    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/gilroy_medium</item>
        <item name="android:textColor">@color/dark_lighter</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Bold40">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Text.Bold24">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Text.Bold16">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Text.SemiBold18">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/gilroy_semibold</item>
        <item name="android:textColorHint">@color/dark_lighter</item>
    </style>

    <style name="Text.H1">
        <item name="android:textSize">40sp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Text.H2">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
    </style>

    <style name="Text.T1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Text.T2">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.T3">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.DarkGray">
        <item name="android:textColor">@color/black_gray</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">

        <item name="cornerRadius">16dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ButtonText" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">12dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Button.Blue">
        <item name="android:backgroundTint">@color/blue_med</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/gilroy_bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Button.BlackGray">
        <item name="android:backgroundTint">@color/black_gray</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button.Gray">
        <item name="android:backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black_gray</item>
    </style>

    <!-- Splash Screen Theme -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>

    </style>
</resources>