<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:padding="8sp">


    <TextView
        android:id="@+id/timeMeasureText"
        style="@style/Text.DarkGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="4dp"
        android:text="8:00"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/addMeasureText"
        style="@style/Text.DarkGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:text="120"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/valueMeasureText"
        style="@style/Text.DarkGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/l_per_min" />

    <ImageView
        android:id="@+id/deleteAlarmIcon"
        android:layout_width="0dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:background="?android:attr/selectableItemBackground"
        app:srcCompat="@drawable/delete_24" />
</LinearLayout>