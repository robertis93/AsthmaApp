<?xml version="1.0" encoding="utf-8"?><!--XML implementation of Card Layout
    Keep the width of card layout to match parent-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="8dp"
            android:id="@+id/hourText"
            style="@style/Text.DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="22"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/pointDoubleText"
            style="@style/Text.DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" :"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/minuteText"
            style="@style/Text.DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="44"
            android:layout_marginStart="8dp"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/measureText"
            style="@style/Text.DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="150"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/measuress"
            style="@style/Text.DarkGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:text="@string/lmin"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/editAlarmImage"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:srcCompat="@drawable/edit_icon"


            />

        <ImageView
            android:id="@+id/image_delete_alarm"
            style="@style/Text.DarkGray"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:srcCompat="@drawable/delete_24" />
    </LinearLayout>

</androidx.cardview.widget.CardView>