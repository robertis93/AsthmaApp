<?xml version="1.0" encoding="utf-8"?>
<!--XML implementation of Card Layout
    Keep the width of card layout to match parent-->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/hourText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22"
        android:padding="4dp"
        android:textSize="16sp"
        style="@style/Text.DarkGray"
       />

    <TextView
        android:id="@+id/pointDoubleText"
        style="@style/Text.DarkGray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" :"
        android:padding="4dp"
        android:textSize="16sp"
       />


    <TextView
        android:id="@+id/minuteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="44"
        android:padding="4dp"
        style="@style/Text.DarkGray"
        android:textSize="16sp"
       />


    <TextView
        android:id="@+id/measureText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="150"
        android:paddingEnd="8dp"
        style="@style/Text.DarkGray"
        android:textSize="16sp"
        android:paddingStart="8dp"/>

    <TextView
        android:id="@+id/measuresValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/l_per_min"
        style="@style/Text.DarkGray"
        android:textSize="16sp"
        android:paddingStart="8dp"/>


    </LinearLayout>

</androidx.cardview.widget.CardView>