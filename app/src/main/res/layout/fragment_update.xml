<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragments.AddFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/editTextDateUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:inputType="date"
            android:text="22 января 2021"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/time1Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:inputType="number"
                android:text="08:00"
                tools:layout_editor_absoluteX="-8dp"
                tools:layout_editor_absoluteY="120dp" />

            <EditText
                android:id="@+id/editTextNumber2Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="100"
                tools:layout_editor_absoluteX="191dp"
                tools:layout_editor_absoluteY="116dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/time2Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="15:00"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="204dp" />

            <EditText
                android:id="@+id/editTextNumber4Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="120"
                tools:layout_editor_absoluteX="216dp"
                tools:layout_editor_absoluteY="196dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/time3Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="23:00"
                tools:layout_editor_absoluteX="-8dp"
                tools:layout_editor_absoluteY="311dp" />

            <EditText
                android:id="@+id/editTextNumber6Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="99"
                tools:layout_editor_absoluteX="211dp"
                tools:layout_editor_absoluteY="315dp" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="12dp"
            android:id="@+id/gragsUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:text="Прием лекарства"
            android:textSize="24sp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Лекарство:"
                android:textSize="24sp"
                android:layout_marginEnd="24sp"/>

        <EditText
            android:id="@+id/editTextTextPersonName2Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:inputType="textPersonName"
            android:text="Intal"
             />

        </LinearLayout>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Планировалось"
    android:textSize="24sp"
    android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNumber8Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="250"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="501dp" />


            <TextView
                android:id="@+id/textView3Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="мкг/доза"
                tools:layout_editor_absoluteX="269dp"
                tools:layout_editor_absoluteY="433dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNumber7Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="2"
                tools:layout_editor_absoluteY="501dp" />

            <TextView
                android:id="@+id/textView2Update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="раз в день"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="438dp" />

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Планировалось"
            android:textSize="24sp"
            android:layout_gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dozaDidUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="250"
                tools:layout_editor_absoluteX="218dp"
                tools:layout_editor_absoluteY="501dp" />


            <TextView
                android:id="@+id/mdPerDayUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="мкг/доза"
                tools:layout_editor_absoluteX="269dp"
                tools:layout_editor_absoluteY="433dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/didPerDayUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="2"
                tools:layout_editor_absoluteY="501dp" />

            <TextView
                android:id="@+id/PerDayUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="раз в день"
                tools:layout_editor_absoluteX="34dp"
                tools:layout_editor_absoluteY="438dp" />

        </LinearLayout>





    </LinearLayout>

    <Button
        android:id="@+id/saveBtnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>